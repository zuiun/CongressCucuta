<Window x:Class="congress_cucuta.Views.CompilerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:congress_cucuta.Views"
        xmlns:vm="clr-namespace:congress_cucuta.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Name}" Height="480" Width="640">
    <Window.DataContext>
        <vm:CompilerViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType = "Button">
            <Setter Property = "FontFamily" Value = "Candara"/>
            <Setter Property = "FontSize" Value = "44"/>
            <Setter Property = "Padding" Value = "44"/>
        </Style>
        <Style TargetType = "TextBlock">
            <Setter Property = "FontFamily" Value = "Nirmala UI"/>
            <Setter Property = "FontSize" Value = "16"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "Auto"/>
            <RowDefinition Height = "*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row = "1" Command = "{Binding CompileSimulationCommand}" HorizontalAlignment = "Center">
            Compile simulation
        </Button>
        <TextBlock Grid.Row = "2"
                   Visibility = "{Binding WasCompilationSuccess, Converter = {StaticResource BooleanToVisibilityConverter}}"
                   Foreground = "Green"
                   HorizontalAlignment = "Center"
                   Margin = "6">
            Successfully compiled simulation
        </TextBlock>
        <TextBlock Grid.Row = "2"
                   Visibility = "{Binding WasCompilationFailure, Converter = {StaticResource BooleanToVisibilityConverter}}"
                   Foreground = "Red"        
                   HorizontalAlignment = "Center"
                   Margin = "6">
            Failed to compile simulation
        </TextBlock>
    </Grid>
</Window>
