<Window x:Class="congress_cucuta.Views.FileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:congress_cucuta.Views"
        mc:Ignorable="d"
        Title = "Congress of Cucuta" Height = "480" Width = "640">
    <Window.Resources>
        <Style TargetType = "Button">
            <Setter Property = "FontFamily" Value = "Candara"/>
            <Setter Property = "FontSize" Value = "44"/>
            <Setter Property = "Padding" Value = "44"/>
        </Style>
        <Style TargetType = "TextBlock">
            <Setter Property = "FontFamily" Value = "Nirmala UI"/>
            <Setter Property = "Foreground" Value = "Red"/>
            <Setter Property = "FontSize" Value = "16"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "Auto"/>
            <RowDefinition Height = "*"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row = "1" HorizontalAlignment = "Center">
            Choose a simulation
        </Button>
        <TextBlock Grid.Row = "2" Visibility = "Hidden" HorizontalAlignment = "Center" Margin = "6">
            Failed to open file
        </TextBlock>
    </Grid>
</Window>
