<Window x:Class="congress_cucuta.Views.SimulationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:congress_cucuta.Views"
        xmlns:vm = "clr-namespace:congress_cucuta.ViewModels"
        mc:Ignorable="d"
        Title="{Binding State}" Height="720" Width="1280">
    <Window.Resources>
        <Style TargetType = "Border">
            <Setter Property = "BorderBrush" Value = "Black"/>
            <Setter Property = "BorderThickness" Value = "0, 1, 0, 0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "3*"/>
            <ColumnDefinition Width = "1*"/>
        </Grid.ColumnDefinitions>

        <!--<Border>-->
            <local:SlideView Grid.Column = "0" DataContext = "{Binding Slide}"/>
        <!--</Border>-->
        <local:ContextView Grid.Column = "1" DataContext = "{Binding Context}"/>
    </Grid>
</Window>
