<UserControl x:Class="congress_cucuta.Views.LinkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:congress_cucuta.Views"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="160">
    <UserControl.Resources>
        <Style TargetType = "Button">
            <Setter Property = "FontFamily" Value = "Candara"/>
            <Setter Property = "FontSize" Value = "16"/>
            <Setter Property = "Padding" Value = "6, 0, 6, 0"/>
            <Setter Property = "Margin" Value = "0, 0, 0, 12"/>
        </Style>
    </UserControl.Resources>
    <Button Content = "{Binding Name}"
            Command = "{Binding DataContext.SwitchSlideCommand, RelativeSource = {RelativeSource AncestorType = Window}}"
            CommandParameter = "{Binding Link}"/>
</UserControl>
