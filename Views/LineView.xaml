<UserControl x:Class="congress_cucuta.Views.LineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:congress_cucuta.Views"
             xmlns:c="clr-namespace:congress_cucuta.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <c:IndentLevelToMarginConverter x:Key = "IndentLevelToMarginConverter"/>
        <c:IndentLevelToFontSizeConverter x:Key = "IndentLevelToFontSizeConverter"/>
        <c:IsImportantToForegroundConverter x:Key = "IsImportantToForegroundConverter"/>
        <c:DescriptionToTextDecorationsConverter x:Key = "DescriptionToTextDecorationsConverter"/>
        <c:DescriptionToForegroundConverter x:Key = "DescriptionToForegroundConverter"/>
        <Style TargetType = "TextBlock">
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding = "{Binding Path = IsContent}" Value = "true"/>
                        <Condition Binding = "{Binding Path = IsImportant}" Value = "true"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property = "Foreground" Value = "Red"/>
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding = "{Binding Path = IsContent}" Value = "true"/>
                        <Condition Binding = "{Binding Path = IsImportant}" Value = "false"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property = "Foreground" Value = "{Binding Description, Converter = {StaticResource DescriptionToForegroundConverter}}"/>
                </MultiDataTrigger>
                <DataTrigger Binding = "{Binding Path = IsContent}" Value = "false">
                    <Setter Property = "Foreground" Value = "Gray"/>
                </DataTrigger>
            </Style.Triggers>

            <Setter Property = "FontFamily" Value = "Nirmala UI Semilight"/>
            <Setter Property = "FontSize" Value = "{Binding IndentLevel, Converter = {StaticResource IndentLevelToFontSizeConverter}}"/>
        </Style>
        <Style TargetType = "ToolTip">
            <Setter Property = "FontFamily" Value = "Segoe UI"/>
            <Setter Property = "FontSize" Value = "12"/>
        </Style>
        <Style x:Key = "Content" TargetType = "Grid">
            <Setter Property = "Visibility" Value = "{Binding IsContent, Converter = {StaticResource BooleanToVisibilityConverter}}"/>
        </Style>
        <Style x:Key = "Subtitle" TargetType = "Grid">
            <Setter Property = "Visibility" Value = "{Binding IsSubtitle, Converter = {StaticResource BooleanToVisibilityConverter}}"/>
        </Style>
        <Style x:Key = "Text" BasedOn = "{StaticResource {x:Type TextBlock}}" TargetType = "TextBlock">
            <Style.Triggers>
                <DataTrigger Binding = "{Binding Path = Description, Converter = {StaticResource DescriptionToTextDecorationsConverter}}"
                             Value = "Underline">
                    <Setter Property = "TextDecorations" Value = "Underline"/>
                    <Setter Property = "ToolTip" Value = "{Binding Description}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid Style = "{StaticResource Content}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "Auto"/>
                <ColumnDefinition Width = "*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column = "0" Text = "• " Margin = "{Binding IndentLevel, Converter = {StaticResource IndentLevelToMarginConverter}}"/>
            <TextBlock Grid.Column = "1" Style = "{StaticResource Text}" Text = "{Binding Text}" TextWrapping = "Wrap"/>
        </Grid>
        <Grid Style = "{StaticResource Subtitle}">
            <TextBlock Text = "{Binding Text}" TextWrapping = "Wrap"/>
        </Grid>
    </Grid>
</UserControl>
