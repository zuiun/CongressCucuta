<UserControl x:Class = "congress_cucuta.Views.SlideView"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local = "clr-namespace:congress_cucuta.Views"
             xmlns:vm = "clr-namespace:congress_cucuta.ViewModels"
             mc:Ignorable = "d"
             d:DesignHeight = "720" d:DesignWidth = "810">
    <UserControl.Resources>
        <Style TargetType = "Label">
            <Setter Property = "FontFamily" Value = "Candara"/>
            <Setter Property = "FontSize" Value = "44"/>
            <Setter Property = "FontWeight" Value = "Bold"/>
        </Style>
        <Style x:Key = "Description" TargetType = "ItemsControl">
            <Setter Property = "Padding" Value = "24, 0, 0, 0"/>
        </Style>
        <Style TargetType = "Button">
            <Setter Property = "FontFamily" Value = "Candara"/>
            <Setter Property = "FontSize" Value = "28"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "Auto"/>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row = "0" Content = "{Binding Title}" HorizontalAlignment = "Center"/>
        <ItemsControl Grid.Row = "1" Style = "{StaticResource Description}" ItemsSource = "{Binding Description}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:LineView/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <ItemsControl Grid.Row = "2" ItemsSource = "{Binding Links}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns = "{Binding Links.Count}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:LinkView HorizontalAlignment = "Center" VerticalAlignment = "Center"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
