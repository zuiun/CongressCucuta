<Window x:Class="congress_cucuta.Views.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:congress_cucuta.Views"
        xmlns:vm="clr-namespace:congress_cucuta.ViewModels"
        mc:Ignorable="d"
        Title="Congress of Cucuta" Height="480" Width="640">
    <Window.DataContext>
        <vm:SetupViewModel/>
    </Window.DataContext>

    <Grid>
        <local:FileView Visibility = "{Binding IsFileSetup, Converter = {StaticResource BooleanToVisibilityConverter}}"/>
        <local:PeopleView Visibility = "{Binding IsPeopleSetup, Converter = {StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</Window>
