<UserControl x:Class="congress_cucuta.Views.GroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:congress_cucuta.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType = "TextBlock">
            <Setter Property = "FontFamily" Value = "Nirmala UI"/>
            <Setter Property = "FontSize" Value = "16"/>
        </Style>
        <Style TargetType = "ItemsControl">
            <!--From ListBox-->
            <Setter Property = "BorderBrush" Value = "#FFABADB3"/>
            <Setter Property = "BorderThickness" Value = "1"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text = "{Binding Name}" HorizontalAlignment = "Center"/>
        <ItemsControl ItemsSource = "{Binding People}" HorizontalContentAlignment = "Stretch">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock FontFamily = "Nirmala UI Semilight"  FontSize = "12" Text = "{Binding Name}" Margin = "2, 0, 0, 0"/>
                        <RadioButton GroupName = "{Binding FactionID}"
                                     IsChecked = "{Binding IsSelected}"
                                     Visibility = "{Binding IsCandidate, Converter = {StaticResource BooleanToVisibilityConverter}}"
                                     HorizontalAlignment = "Right"
                                     VerticalAlignment = "Center"
                                     Margin = "0, 0, 2, 0"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
