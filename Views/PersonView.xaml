<UserControl x:Class="congress_cucuta.Views.PersonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:congress_cucuta.Views"
             xmlns:c="clr-namespace:congress_cucuta.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <c:CanSpeakToTextDecorationsConverter x:Key = "CanSpeakToTextDecorationsConverter"/>
        <Style TargetType = "TextBlock">
            <Setter Property = "Foreground" Value = "White"/>
            <Setter Property = "FontFamily" Value = "Nirmala UI Semilight"/>
            <Setter Property = "FontSize" Value = "14"/>
            <Setter Property = "Margin" Value = "6, 0, 6, 4"/>
            <Setter Property = "TextDecorations" Value = "{Binding CanSpeak, Converter = {StaticResource CanSpeakToTextDecorationsConverter}}"/>
        </Style>
        <Style TargetType = "ToolTip">
            <Setter Property = "FontFamily" Value = "Segoe UI"/>
            <Setter Property = "FontSize" Value = "12"/>
        </Style>
        <Style TargetType = "RadioButton">
            <Setter Property = "Margin" Value = "0, 0, 0, 2"/>
            <Setter Property = "Focusable" Value = "False"/>
        </Style>
        <Style TargetType = "Button">
            <Setter Property = "FontFamily" Value = "Candara"/>
            <Setter Property = "FontSize" Value = "16"/>
            <Setter Property = "Padding" Value = "8, 4, 8, 4"/>
            <Setter Property = "Margin" Value = "0, 0, 0, 4"/>
            <Setter Property = "Focusable" Value = "False"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "5*"/>
            <ColumnDefinition Width = "2*"/>
            <ColumnDefinition Width = "2*"/>
            <ColumnDefinition Width = "2*"/>
            <ColumnDefinition Width = "1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column = "0" Orientation = "Horizontal">
            <ScrollViewer Grid.Column = "0"
                          VerticalScrollBarVisibility = "Disabled"
                          HorizontalScrollBarVisibility = "Auto"
                          MaxWidth = "98"
                          Margin = "1, 0, 0, 1">
                <!--148.04722222222222-->
                <TextBlock Text = "{Binding Name}" VerticalAlignment = "Center"/>
            </ScrollViewer>
            <ItemsControl Grid.Column = "1"
                          ItemsSource = "{Binding Roles}"
                          BorderThickness = "0"
                          VerticalContentAlignment = "Stretch"
                          Padding = "0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation = "Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Foreground = "Cyan"
                                   FontFamily = "Segoe UI Semilight"
                                   FontSize = "12"
                                   Text = "{Binding Abbreviation}"
                                   ToolTip = "{Binding Name}"
                                   VerticalAlignment = "Center"
                                   Padding = "0"
                                   Margin = "0, 0, 2, 24"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <RadioButton Visibility = "{Binding CanVote, Converter = {StaticResource BooleanToVisibilityConverter}}"
                     Grid.Column = "1"
                     GroupName = "{Binding ID}"
                     IsChecked = "{Binding IsPass}"
                     HorizontalAlignment = "Center"
                     VerticalAlignment = "Center"
                     IsEnabled = "{Binding IsInteractable}"/>
        <RadioButton Visibility = "{Binding CanVote, Converter = {StaticResource BooleanToVisibilityConverter}}"
                     Grid.Column = "2"
                     GroupName = "{Binding ID}"
                     IsChecked = "{Binding IsFail}"
                     HorizontalAlignment = "Center"
                     VerticalAlignment = "Center"
                     IsEnabled = "{Binding IsInteractable}"/>
        <RadioButton Visibility = "{Binding CanVote, Converter = {StaticResource BooleanToVisibilityConverter}}"
                     Grid.Column = "3"
                     GroupName = "{Binding ID}"
                     IsChecked = "{Binding IsAbstain}"
                     HorizontalAlignment = "Center"
                     VerticalAlignment = "Center"
                     IsEnabled = "{Binding IsInteractable}"/>
        <Button Grid.Column = "6"
                HorizontalAlignment = "Center"
                VerticalAlignment = "Center"
                IsEnabled = "{Binding IsInteractable}"
                Margin = "0, 0, 0, 4"
                Command = "{Binding DeclareProcedureCommand}">
            <Button.LayoutTransform>
                <RotateTransform Angle = "90"/>
            </Button.LayoutTransform>
            
            <TextBlock Foreground = "Black"
                       FontFamily = "Candara"
                       FontSize = "12"
                       Text = "Declare"
                       Margin = "0"/>
        </Button>
    </Grid>
</UserControl>
