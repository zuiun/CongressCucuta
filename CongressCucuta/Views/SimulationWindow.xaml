<Window x:Class="CongressCucuta.Views.SimulationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CongressCucuta.Views"
        xmlns:vm = "clr-namespace:CongressCucuta.ViewModels"
        mc:Ignorable="d"
        Title="{Binding State}" Height="720" Width="1280">
    <Window.InputBindings>
        <KeyBinding Key = "Left" Command = "{Binding TrySwitchSlideCommand}" CommandParameter = "{x:Static vm:Shortcut.Left}"/>
        <KeyBinding Key = "Up" Command = "{Binding TrySwitchSlideCommand}" CommandParameter = "{x:Static vm:Shortcut.Up}"/>
        <KeyBinding Key = "Down" Command = "{Binding TrySwitchSlideCommand}" CommandParameter = "{x:Static vm:Shortcut.Down}"/>
        <KeyBinding Key = "Right" Command = "{Binding TrySwitchSlideCommand}" CommandParameter = "{x:Static vm:Shortcut.Right}"/>
    </Window.InputBindings>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "3*"/>
            <ColumnDefinition Width = "1*"/>
        </Grid.ColumnDefinitions>

        <local:SlideView Grid.Column = "0" DataContext = "{Binding Slide}"/>
        <local:ContextView Grid.Column = "1" DataContext = "{Binding Context}"/>
    </Grid>
</Window>
