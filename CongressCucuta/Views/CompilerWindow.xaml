<Window x:Class="CongressCucuta.Views.CompilerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CongressCucuta.Views"
        xmlns:vm="clr-namespace:CongressCucuta.ViewModels"
        mc:Ignorable="d"
        Title="Constitution of Cúcuta" Height="480" Width="640">
    <Window.DataContext>
        <vm:CompilerViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType = "Button">
            <Setter Property = "FontFamily" Value = "Candara"/>
            <Setter Property = "FontSize" Value = "16"/>
            <Setter Property = "Padding" Value = "12, 6, 12, 6"/>
        </Style>
        <Style TargetType = "TextBlock">
            <Setter Property = "FontFamily" Value = "Nirmala UI"/>
            <Setter Property = "FontSize" Value = "16"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "5*"/>
            <RowDefinition Height = "1*"/>
            <RowDefinition Height = "5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "1*"/>
            <ColumnDefinition Width = "2*"/>
            <ColumnDefinition Width = "2*"/>
            <ColumnDefinition Width = "1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row = "0"
           Grid.Column = "1"
           HorizontalAlignment = "Center"
           VerticalAlignment = "Bottom"
           Margin = "0, 0, 0, 6">
            Select simulation
        </TextBlock>
        <ComboBox Grid.Row = "1"
                  Grid.Column = "1"
                  ItemsSource = "{Binding Simulations}"
                  SelectedIndex = "{Binding SelectedIdx}"
                  HorizontalAlignment = "Center"
                  VerticalAlignment = "Center"
                  Padding = "6, 0, 0, 2">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock FontFamily = "Nirmala UI Semilight" FontSize = "16" Text = "{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button Grid.Row = "1"
                Grid.Column = "2"
                Command = "{Binding CompileSimulationCommand}"
                HorizontalAlignment = "Center"
                VerticalAlignment = "Center">
            Compile simulation
        </Button>
        <TextBlock Grid.Row = "2"
                   Grid.Column = "1"
                   Grid.ColumnSpan = "2"
                   Visibility = "{Binding WasCompilationSuccess, Converter = {StaticResource BooleanToVisibilityConverter}}"
                   Foreground = "Green"
                   HorizontalAlignment = "Center"
                   Margin = "6">
            <Run Text = "Successfully compiled"/>
            <Run Text = "{Binding Name}"/>
            <Run Text = "to"/>
            <Run Text = "{Binding Filename}"/>
        </TextBlock>
        <TextBlock Grid.Row = "2"
                   Grid.Column = "1"
                   Grid.ColumnSpan = "2"
                   Visibility = "{Binding WasCompilationFailure, Converter = {StaticResource BooleanToVisibilityConverter}}"
                   Foreground = "Red"        
                   HorizontalAlignment = "Center"
                   Margin = "6">
            <Run Text = "Failed to compile"/>
            <Run Text = "{Binding Name}"/>
            <Run Text = "to"/>
            <Run Text = "{Binding Filename}"/>
        </TextBlock>
    </Grid>
</Window>
