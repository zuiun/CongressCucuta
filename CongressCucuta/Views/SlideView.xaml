<UserControl x:Class = "CongressCucuta.Views.SlideView"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local = "clr-namespace:CongressCucuta.Views"
             mc:Ignorable = "d"
             d:DesignHeight = "720" d:DesignWidth = "810">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType = "TextBlock">
            <Setter Property = "FontFamily" Value = "Candara"/>
            <Setter Property = "FontSize" Value = "44"/>
        </Style>
        <Style x:Key = "Content" TargetType = "Grid">
            <Setter Property = "Visibility" Value = "{Binding IsContent, Converter = {StaticResource BooleanToVisibilityConverter}}"/>
        </Style>
        <Style x:Key = "Subtitle" TargetType = "Grid">
            <Setter Property = "Visibility" Value = "{Binding IsSubtitle, Converter = {StaticResource BooleanToVisibilityConverter}}"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "9*"/>
            <RowDefinition Height = "1*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row = "0" Style = "{StaticResource Content}">
            <Grid.RowDefinitions>
                <RowDefinition Height = "5*"/>
                <RowDefinition Height = "25*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "1*"/>
                <ColumnDefinition Width = "18*"/>
                <ColumnDefinition Width = "1*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row = "0"
                       Grid.Column = "1"
                       Text = "{Binding Title}"
                       HorizontalAlignment = "Center"
                       VerticalAlignment = "Center"
                       TextWrapping = "Wrap"/>
            <ItemsControl Grid.Row = "1" Grid.Column = "1" ItemsSource = "{Binding Description}" VerticalAlignment = "Top">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:LineView/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <Grid Grid.Row = "0" Style = "{StaticResource Subtitle}">
            <Grid.RowDefinitions>
                <RowDefinition Height = "13*"/>
                <RowDefinition Height = "3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "1*"/>
                <ColumnDefinition Width = "18*"/>
                <ColumnDefinition Width = "1*"/>
            </Grid.ColumnDefinitions>

            <ItemsControl Grid.Row = "0"
                          Grid.Column = "1"
                          ItemsSource = "{Binding Description}"
                          VerticalAlignment = "Bottom">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:LineView/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock Grid.Row = "1"
                       Grid.Column = "1"
                       Text = "{Binding Title}"
                       TextWrapping = "Wrap"
                       VerticalAlignment = "Top"/>
        </Grid>
        <ItemsControl Grid.Row = "1" ItemsSource = "{Binding Links}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns = "{Binding Links.Count}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command = "{Binding DataContext.SwitchSlideCommand, RelativeSource = {RelativeSource AncestorType = Window}}"
                            CommandParameter = "{Binding Link}"
                            HorizontalAlignment = "Center"
                            VerticalAlignment = "Center"
                            Padding = "12, 6, 12, 6"
                            Margin = "0, 0, 0, 12">
                        <TextBlock FontFamily = "Candara"
                                   FontSize = "16"
                                   Text = "{Binding Name}"
                                   TextWrapping = "Wrap"/>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
