<Window x:Class="CongressCucuta.Views.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CongressCucuta.Views"
        xmlns:vm="clr-namespace:CongressCucuta.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="480" Width="640">
    <Window.DataContext>
        <vm:SetupViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid Visibility = "{Binding IsImportSetup, Converter = {StaticResource BooleanToVisibilityConverter}}">
            <local:ImportView DataContext = "{Binding Import}"/>
        </Grid>
        <Grid Visibility = "{Binding IsPeopleSetup, Converter = {StaticResource BooleanToVisibilityConverter}}">
            <local:PeopleView DataContext = "{Binding People}"/>
        </Grid>
    </Grid>
</Window>
