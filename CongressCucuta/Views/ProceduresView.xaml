<UserControl x:Class="CongressCucuta.Views.ProceduresView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CongressCucuta.Views"
             xmlns:c="clr-namespace:CongressCucuta.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <c:CountToVisibilityConverter x:Key = "CountToVisibilityConverter"/>
        <Style TargetType = "TextBlock">
            <Setter Property = "Foreground" Value = "White"/>
            <Setter Property = "FontFamily" Value = "Nirmala UI"/>
            <Setter Property = "FontSize" Value = "16"/>
        </Style>
        <Style TargetType = "ListBox">
            <Setter Property = "Background" Value = "#00000000"/>
            <Setter Property = "Padding" Value = "0, 0, 0, 0"/>
            <Setter Property = "HorizontalContentAlignment" Value = "Stretch"/>
        </Style>
        <Style TargetType = "ListBoxItem">
            <Setter Property = "Focusable" Value = "False"/>
            <Setter Property = "Padding" Value = "0"/>
            <Setter Property = "Margin" Value = "0, 0, 1, 0"/>
        </Style>
        <Style x:Key = "Open" TargetType = "TextBlock">
            <Style.Triggers>
                <DataTrigger Binding = "{Binding IsChecked, ElementName = Procedures}" Value = "true">
                    <Setter Property = "Visibility" Value = "Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding = "{Binding IsChecked, ElementName = Procedures}" Value = "false">
                    <Setter Property = "Visibility" Value = "Visible"/>
                </DataTrigger>
            </Style.Triggers>

            <Setter Property = "Foreground" Value = "Black"/>
            <Setter Property = "FontFamily" Value = "Candara"/>
            <Setter Property = "FontSize" Value = "12"/>
        </Style>
        <Style x:Key = "Close" TargetType = "TextBlock">
            <Style.Triggers>
                <DataTrigger Binding = "{Binding IsChecked, ElementName = Procedures}" Value = "true">
                    <Setter Property = "Visibility" Value = "Visible"/>
                </DataTrigger>
                <DataTrigger Binding = "{Binding IsChecked, ElementName = Procedures}" Value = "false">
                    <Setter Property = "Visibility" Value = "Collapsed"/>
                </DataTrigger>
            </Style.Triggers>

            <Setter Property = "Foreground" Value = "Black"/>
            <Setter Property = "FontFamily" Value = "Candara"/>
            <Setter Property = "FontSize" Value = "12"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text = "Procedures" HorizontalAlignment = "Center"/>
        <StackPanel Visibility = "{Binding IsChecked, ElementName = Procedures, Converter = {StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Visibility = "{Binding ProceduresGovernmental.Count, Converter = {StaticResource CountToVisibilityConverter}}"
                       Text = "Governmental Procedures"
                       HorizontalAlignment = "Center"/>
            <ListBox Visibility = "{Binding ProceduresGovernmental.Count, Converter = {StaticResource CountToVisibilityConverter}}"
                     ItemsSource = "{Binding ProceduresGovernmental}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Foreground = "White"
                                   FontFamily = "Nirmala UI Semilight"
                                   FontSize = "14"
                                   Text = "{Binding Name}"
                                   ToolTip = "{Binding Effects}"
                                   Margin = "4, 0, 0, 2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock Visibility = "{Binding ProceduresSpecial.Count, Converter = {StaticResource CountToVisibilityConverter}}"
                       Text = "Special Procedures" HorizontalAlignment = "Center"/>
            <ListBox Visibility = "{Binding ProceduresSpecial.Count, Converter = {StaticResource CountToVisibilityConverter}}"
                     ItemsSource = "{Binding ProceduresSpecial}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Foreground = "White"
                                   FontFamily = "Nirmala UI Semilight"
                                   FontSize = "14"
                                   Text = "{Binding Name}"
                                   ToolTip = "{Binding Effects}"
                                   Margin = "4, 0, 0, 2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock Visibility = "{Binding ProceduresDeclared.Count, Converter = {StaticResource CountToVisibilityConverter}}"
                       Text = "Declared Procedures" HorizontalAlignment = "Center"/>
            <ListBox Visibility = "{Binding ProceduresDeclared.Count, Converter = {StaticResource CountToVisibilityConverter}}"
                     ItemsSource = "{Binding ProceduresDeclared}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Foreground = "White"
                                   FontFamily = "Nirmala UI Semilight"
                                   FontSize = "14"
                                   Text = "{Binding Name}"
                                   ToolTip = "{Binding Effects}"
                                   Margin = "4, 0, 0, 2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <ToggleButton x:Name = "Procedures"
                  Focusable = "False"
                  HorizontalAlignment = "Stretch"
                  Padding = "0, 2, 0, 2">
            <Grid>
                <TextBlock Style = "{StaticResource Open}" Text = "Open" Margin = "0, 0, 0, 2"/>
                <TextBlock Style = "{StaticResource Close}" Text = "Close" Margin = "0, 0, 0, 2"/>
            </Grid>
        </ToggleButton>
    </StackPanel>
</UserControl>
