<Window x:Class="CongressCucuta.Views.ElectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CongressCucuta.Views"
        mc:Ignorable="d"
        Title="Election" Height="640" Width="480">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType = "TextBlock">
            <Setter Property = "FontFamily" Value = "Nirmala UI"/>
            <Setter Property = "FontSize" Value = "16"/>
        </Style>
        <Style TargetType = "ListBox">
            <Setter Property = "FontFamily" Value = "Nirmala UI Semilight"/>
            <Setter Property = "FontSize" Value = "12"/>
            <Setter Property = "Padding" Value = "0, 0, 0, 0"/>
        </Style>
        <Style TargetType = "ListBoxItem">
            <Setter Property = "Focusable" Value = "False"/>
            <Setter Property = "Padding" Value = "0"/>
            <Setter Property = "Margin" Value = "0, 0, 0, 0"/>
        </Style>
        <Style TargetType = "Button">
            <Setter Property = "FontFamily" Value = "Candara"/>
            <Setter Property = "FontSize" Value = "16"/>
            <Setter Property = "Padding" Value = "12, 6, 12, 6"/>
            <Setter Property = "Margin" Value = "0, 0, 0, 12"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "2*"/>
            <RowDefinition Height = "23*"/>
            <RowDefinition Height = "1*"/>
            <RowDefinition Height = "2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "1*"/>
            <ColumnDefinition Width = "8*"/>
            <ColumnDefinition Width = "1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row = "0"
                   Grid.Column = "1"
                   Text = "{Binding Election.Title}"
                   HorizontalAlignment = "Center"
                   VerticalAlignment = "Center"/>
        <Grid Grid.Row = "1" Grid.Column = "1">
            <Grid.RowDefinitions>
                <RowDefinition Height = "1*"/>
                <RowDefinition Height = "14*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "*"/>
                <ColumnDefinition Width = "Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock FontFamily = "Nirmala UI"
                       FontSize = "14"
                       Grid.Row = "0"
                       Grid.Column = "0"
                       Text = "Name"
                       VerticalAlignment = "Center"
                       Margin = "6, 0, 0, 0"/>
            <TextBlock FontFamily = "Nirmala UI"
                       FontSize = "14"
                       Grid.Row = "0"
                       Grid.Column = "1"
                       Text = "Choice"
                       HorizontalAlignment = "Right"
                       VerticalAlignment = "Center"
                       Margin = "0, 0, 6, 0"
                       Visibility = "{Binding Election.IsLeaderNeeded, Converter = {StaticResource BooleanToVisibilityConverter}}"/>
            <ListBox Grid.Row = "1"
                     Grid.Column = "0"
                     Grid.ColumnSpan = "2"
                     ItemsSource = "{Binding Election.GroupsPeople}"
                     HorizontalContentAlignment = "Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <local:GroupView/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <Button Grid.Row = "3" Grid.Column = "1" HorizontalAlignment = "Center" Command = "{Binding RunNextElectionCommand}">
            Next
        </Button>
    </Grid>
</Window>
