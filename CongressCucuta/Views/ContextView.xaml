<UserControl x:Class="CongressCucuta.Views.ContextView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CongressCucuta.Views"
             xmlns:c="clr-namespace:CongressCucuta.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="320">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType = "ItemsControl">
            <Setter Property = "Background" Value = "#00000000"/>
            <Setter Property = "Padding" Value = "0, 4, 0, 0"/>
            <Setter Property = "HorizontalContentAlignment" Value = "Stretch"/>
            <!--From ListBox-->
            <Setter Property = "BorderBrush" Value = "#FFABADB3"/>
            <Setter Property = "BorderThickness" Value = "1"/>
        </Style>
        <Style TargetType = "TextBlock">
            <Setter Property = "Foreground" Value = "White"/>
            <Setter Property = "FontFamily" Value = "Nirmala UI"/>
            <Setter Property = "FontSize" Value = "16"/>
        </Style>
        <Style TargetType = "ListBox">
            <Setter Property = "Background" Value = "#00000000"/>
            <Setter Property = "Padding" Value = "0, 0, 0, 0"/>
            <Setter Property = "HorizontalContentAlignment" Value = "Stretch"/>
        </Style>
        <Style TargetType = "ListBoxItem">
            <Setter Property = "Focusable" Value = "False"/>
            <Setter Property = "Padding" Value = "0"/>
            <Setter Property = "Margin" Value = "0, 0, 1, 0"/>
        </Style>
    </UserControl.Resources>

    <Grid Background = "Black">
        <Grid.RowDefinitions>
            <RowDefinition Height = "5*"/>
            <RowDefinition Height = "2*"/>
            <RowDefinition Height = "Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row = "0">
            <Grid.RowDefinitions>
                <RowDefinition Height = "Auto"/>
                <RowDefinition Height = "Auto"/>
                <RowDefinition Height = "*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row = "0"
                       Visibility = "{Binding IsCurrency, Converter = {StaticResource BooleanToVisibilityConverter}}"
                       HorizontalAlignment = "Center">
                <Run Text = "{Binding Value}"/>
                <Run Text = "{Binding CurrencyName}"/>
            </TextBlock>
            <Grid Grid.Row = "1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "5*"/>
                    <ColumnDefinition Width = "2*"/>
                    <ColumnDefinition Width = "1.9*"/>
                    <ColumnDefinition Width = "2.2*"/>
                    <ColumnDefinition Width = "0.9*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column = "0"
                           Text = "Name"
                           Margin = "6, 0, 0, 2"/>
                <TextBlock Grid.Column = "1"
                           Text = "Pass"
                           HorizontalAlignment = "Center"
                           Margin = "0, 0, 2, 2"/>
                <TextBlock Grid.Column = "2"
                           Grid.ColumnSpan = "1"
                           Text = "Fail"
                           HorizontalAlignment = "Center"
                           Margin = "0, 0, 2, 2"/>
                <TextBlock Grid.Column = "3"
                           Text = "Abstain"
                           HorizontalAlignment = "Center"
                           Margin = "0, 0, 4, 2"/>
            </Grid>
            <Grid Grid.Row = "2" Visibility = "{Binding IsPeople, Converter = {StaticResource BooleanToVisibilityConverter}}">
                <ListBox ItemsSource = "{Binding People}" HorizontalContentAlignment = "Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <local:PersonView/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            <Grid Grid.Row = "2" Visibility = "{Binding IsFaction, Converter = {StaticResource BooleanToVisibilityConverter}}">
                <ListBox ItemsSource = "{Binding FactionsPeople}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Visibility = "{Binding IsNotCurrency, Converter = {StaticResource BooleanToVisibilityConverter}}"
                                           Foreground = "White"
                                           FontFamily = "Nirmala UI"
                                           FontSize = "16"
                                           Text = "{Binding Name}"
                                           HorizontalAlignment = "Center"
                                           Margin = "0, 0, 0, 2"/>
                                <TextBlock Visibility = "{Binding IsCurrency, Converter = {StaticResource BooleanToVisibilityConverter}}"
                                           Foreground = "White"
                                           FontFamily = "Nirmala UI"
                                           FontSize = "16"
                                           HorizontalAlignment = "Center"
                                           Margin = "0, 0, 0, 2">
                                    <Run Text = "{Binding Name}"/>
                                    <Run Text = ":"/>
                                    <Run Text = "{Binding Value}"/>
                                    <Run Text = "{Binding Currency}"/>
                                </TextBlock>
                                <ItemsControl ItemsSource = "{Binding People}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <local:PersonView/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
        <local:BallotsView Grid.Row = "1"/>
        <local:ProceduresView Grid.Row = "2"/>
    </Grid>
</UserControl>
